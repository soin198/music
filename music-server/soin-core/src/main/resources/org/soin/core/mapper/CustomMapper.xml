<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.soin.core.infrastructure.mapper.clientCustom.CustomMapper">

    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM t_custom
    </select>

    <select id="list" resultType="org.soin.core.domain.cilentCustom.vo.CustomVo">
        SELECT tc.id,
               tc.username,
               tc.nickname,
               tc.sex,
               tc.phone,
               tc.email,
               tc.birth,
               tc.resume,
               CONCAT(tid.path, '/', tid.name) AS photo
        FROM t_custom tc
                 LEFT JOIN t_image_database tid ON tc.imageId = tid.id
    </select>


</mapper>
